<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Wasket">

    <TextView
        android:id="@+id/ad_reco"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:text="Add Record"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@color/app_thene"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ad_reco"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/underline" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad_reco"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_thene"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/item_txt"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/edit_text_backgrount"
                    android:text="   Length\n   لمبائی"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"  />

                <EditText
                    android:id="@+id/MlengthWas"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="45dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/edit_text_backgrount"
                    android:gravity="center"
                    android:hint="00"
                    android:inputType="number"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/underline"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_thene"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/item_txt3"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/edit_text_backgrount"
                    android:text="   Shoulder\n  تیرہ"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/MshoulderWas"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="45dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/edit_text_backgrount"
                    android:gravity="center"
                    android:hint="00"
                    android:inputType="number"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/underline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_thene"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/item_txt5"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/edit_text_backgrount"
                    android:text="  Chest\n  چھاتی"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/MchestWas"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="45dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/edit_text_backgrount"
                    android:gravity="center"
                    android:hint="00"
                    android:inputType="number"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/underline"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_thene"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/item_txt4"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/edit_text_backgrount"
                    android:text="   Collar\n  کالر"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/McllorWas"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="45dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/edit_text_backgrount"
                    android:gravity="center"
                    android:hint="00"
                    android:inputType="number"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/underline" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_thene"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/MextrainfoWas"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/edit_text_backgrount"
                    android:hint="Extra Information"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/underline" />



            <Button
                android:id="@+id/MregbtnWas"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginStart="105dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/app_thene"
                android:text="Register Data"
                app:cornerRadius="16dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="@color/underline" />
        </LinearLayout>


    </ScrollView>

</RelativeLayout>